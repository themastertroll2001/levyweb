@model Barberia.Models.Event

@{
    ViewData["Title"] = "Detalles de la Cita";
}
<div class="container mt-3" style="max-width: 600px;">

    <h1>@ViewData["Title"]</h1>

    <div>
        <h4>Informacion Citas</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fechainicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fechainicio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Finfecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Finfecha)
            </dd>

        </dl>
    </div>
    <div>
        <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Edit", "Event", new { id = Model?.Id })'">
            <i class="fas fa-edit"></i> Editar
        </button>
        |
        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "Event")'">
            <i class="fas fa-arrow-left"></i> Regresar
        </button>
    </div>
    
</div>

