@model List<UsuarioModel>




<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <br />
            <br />
            <input type="text" id="searchInput" class="form-control mb-3 shadow-sm" placeholder="Buscar...">
            <br />
            <br />
            <table id="tablaUsuarios" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.NombreCompleto</td>
                            <td>@usuario.NombreUsuario</td>
                            <td>@usuario.Correo</td>
                            <td>@usuario.RolNombre</td>
                            <td>
                                <!-- Botón para cambiar rol -->
                                <a class="btn btn-primary" asp-controller="Cuenta" asp-action="HistorialRoles" asp-route-id="@usuario.Id">Historial</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();

            $("#tablaUsuarios tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });

</script>