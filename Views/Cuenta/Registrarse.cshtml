@model UsuarioModel 
@{
    ViewBag.Title = "Registro";
}

<div class="container mt-5">
    <h2 class="text-center">Registrar Nueva Cuenta</h2>
    <form asp-controller="Cuenta" asp-action="Registrarse" method="post">
        <div class="mx-auto" style="max-width: 400px;">
            
            @if (ViewData["error"]!= null)
            {
                <div class="alert alert-danger">
                    @ViewData["error"]
                </div>
            }

            <!-- Nombre -->
            <div class="mb-3">
                <label  class="form-label text-left">Nombre</label>
                <input type="text" class="form-control" asp-for="NombreCompleto"  required>
            </div>

            <!-- Nombre de Usuario -->
            <div class="mb-3">
                <label  class="form-label text-left">Nombre de Usuario</label>
                <input type="text" class="form-control" asp-for="NombreUsuario"  required>
            </div>

            <!-- Correo Electrónico -->
            <div class="mb-3">
                <label  class="form-label text-left">Correo Electrónico</label>
                <input type="email" class="form-control" asp-for="Correo"  required>
            </div>

            <!-- Contraseña -->
            <div class="mb-3">
                <label class="form-label text-left">Contraseña</label>
                <input type="password" class="form-control" asp-for="Contrasena"  required>
            </div>

            <!-- Botón de Registro -->
            <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
    </form>

    <p class="mt-3 text-center">¿Ya tienes una cuenta? <a asp-controller="Home" asp-action="Login">Iniciar Sesión</a></p>
</div>
